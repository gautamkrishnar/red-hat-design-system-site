{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Dropdown item",
  "description": "Action, link, or separator in a dropdown",
  "type": "object",
  "tag": "pfe-dropdown-item",
  "class": "pfe-dropdown-item",
  "category": "content",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {}
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {
        "item-type": {
          "title": "List item type",
          "type": "string",
          "enum": ["link", "action", "separator"],
          "default": null,
          "prefixed": true
        }
      },
      "required": ["pfe-item-type"]
    }
  },
  "required": ["slots", "attributes"],
  "additionalProperties": false
}
